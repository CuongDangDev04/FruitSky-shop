@{
	ViewBag.Title = "Liên hệ";
}
@model ContactModel
<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Hỗ trợ 24/7</p>
					<h1>Liên hệ</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb section -->
<!-- contact form -->
<div class="contact-from-section mt-150 mb-150">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 mb-5 mb-lg-0">
				<div class="form-title">
					<h2>Bạn Có Câu Hỏi Nào Không?</h2>
					<p>Nếu bạn có bất kỳ câu hỏi hoặc muốn biết thêm thông tin, hãy liên hệ với chúng tôi. Chúng tôi luôn sẵn lòng để giải đáp mọi thắc mắc của bạn. Cảm ơn sự quan tâm của bạn!</p>
				</div>
				<div id="form_status"></div>
				<div class="contact-form">
					<form method="post" asp-action="Index" asp-controller="Contact" id="fruitkha-contact" onsubmit="return valid_datas(this);">
						<input type="hidden" />
						<p>
							<input type="text" placeholder="Họ tên" asp-for="Name" id="name" required>
							<input type="email" placeholder="Email" asp-for="Email" id="email" required>
						</p>
						<p>
							<input type="tel" placeholder="Số điện thoại" asp-for="Phone" id="phone" required>
							<input type="text" placeholder="Vấn đề" asp-for="Subject" id="subject" required>
						</p>
						<p>
							<textarea asp-for="Message" id="message" cols="30" rows="10" placeholder="Câu hỏi"></textarea>
						</p>
						<input type="hidden" name="token" value="Abc" required />
						<p>
							<input type="submit" value="Gửi">
						</p>
					</form>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="contact-form-wrap">
					<div class="contact-form-box">
						<h4><i class="fas fa-map"></i>Địa chỉ liên hệ</h4>
						<p>331 An Phú Đông <br> Quận 12 <br> TP.HCM </p>
					</div>
					<div class="contact-form-box">
						<h4><i class="far fa-clock"></i> Thời gian hoạt động</h4>
						<p>24/7 </p>
					</div>
					<div class="contact-form-box">
						<h4><i class="fas fa-address-book"></i> Liên hệ</h4>
						<p>Số điện thoại: 0123456789 <br> Email: support@fruitsky.com</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end contact form -->
<!-- find our location -->
<div class="find-location blue-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<p> <i class="fas fa-map-marker-alt"></i> Địa chỉ trên Google Map</p>
			</div>
		</div>
	</div>
</div>
<!-- end find our location -->
