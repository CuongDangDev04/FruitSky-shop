@{
    ViewBag.Title = "Đăng nhập";
}
@model UserModel
<div class="login-wrap ">
    <div class="login-html">
        <label class="tab"><strong>Đăng nhập</strong></label>

        <div class="login-form">
            <form asp-action="Index" method="post" class="sign-in-htm">
                <div>
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="validation-summary-errors">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p class="text-danger">@error.ErrorMessage</p>
                            }
                        </div>
                    }
                </div>
                <div class="group">
                    <label asp-for="UserName"  class="label" ><strong>Tên đăng nhập</strong></label>
                    <input asp-for="UserName" placeholder="Vui lòng nhập tên đăng nhập" class="input" required />
                </div>
                <div class="group">
                    <label asp-for="Password" class="label"><strong>Mật khẩu</strong></label>
                    <input asp-for="Password" placeholder="Vui lòng nhập mật khẩu" class="input" data-type="password" required />
                </div>

                <div class="group">
                    <button type="submit" class="button"><strong>Đăng nhập</strong></button>
                  
                </div>
            </form>
        </div>
        <p class="text-center text-muted mb-10">
            <strong>Chưa có tài khoản bấm</strong>
            <a asp-action="register" asp-controller="account" class="fw-bold text-body text-decoration-none">
                <strong>Đăng kí</strong>
            </a>
        </p>

    </div>
</div>

