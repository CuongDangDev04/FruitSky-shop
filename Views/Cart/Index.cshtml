@{
    ViewBag.Title = "Giỏ hàng";
}
@model CartItemViewModel
@using FruitSky.Models.ViewModels

<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Trái cây tươi và sạch</p>
                    <h1>Giỏ hàng</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->
<!-- cart -->
<div class="cart-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12">
                <div class="cart-table-wrap">
                    <table class="cart-table">
                        <thead class="cart-table-head">
                            <tr class="table-head-row">
                                <th class="product-remove"></th>
                                <th class="product-image">Hình ảnh sản phẩm</th>
                                <th class="product-name">Tên sản phẩm</th>
                                <th class="product-price">Đơn giá</th>
                                <th class="product-quantity">Số lượng</th>
                                <th class="product-total">Số tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CartItems)
                            {
                                <tr class="table-body-row">
                                    <td class="product-remove"><a asp-action="Remove" asp-controller="cart" asp-route-Id="@item.ProductId"><i class="far fa-window-close"></i></a></td>
                                    <td class="product-image"><img src="~/img/products/@item.Img" alt=""></td>
                                    <td class="product-name">@item.ProductName</td>
                                    <td class="product-price">@item.Price Đ</td>
                                    <td class="product-quantity ">
                                        <a asp-action="Decrease" asp-controller="cart" asp-route-Id="@item.ProductId" class="btn btn-outline-secondary rounded-sm border-1 btn-sm">
                                            <i class="fa-solid fa-minus"></i>
                                        </a>
                                        <span class="quantity">@item.Quantity</span>
                                        <a asp-action="Increase" asp-controller="cart" asp-route-Id="@item.ProductId" class="btn btn-outline-secondary rounded-sm border-1 btn-sm">
                                            <i class="fa-solid fa-plus"></i>
                                        </a>
                                    </td>
                                    <td class="product-total">@Model.CartItems.Where(x => x.ProductId == item.ProductId).Sum(x => x.Quantity * x.Price).ToString() Đ</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (Model.CartItems.Count == 0)
                    {
                        <div class="container mt-5">
                            <div class="alert alert-info" role="alert">
                                Giỏ hàng của bạn chưa có sản phẩm
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="col-lg-4">
                <div class="total-section">
                    <table class="total-table">
                        <thead class="total-table-head">
                            <tr class="table-total-row">
                                <th>Tổng</th>
                                <th>Giá</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="total-data">
                                <td><strong>Tổng số tiền tạm tính: </strong></td>
                                <td>@Model.GrandTotal.ToString() Đ</td>
                            </tr>
                            <tr class="total-data">
                                <td><strong>Phí vận chuyển: </strong></td>
                                <td>Miễn phí</td>
                            </tr>
                            <tr class="total-data">
                                <td><strong>Tổng số tiền: </strong></td>
                                <td>@Model.GrandTotal.ToString() Đ</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="cart-buttons">
                        <a asp-action="Clear" asp-controller="Cart" class="boxed-btn">Xoá giỏ hàng</a>
                        <a asp-action="index" asp-controller="checkout" class="boxed-btn black">Thanh toán</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end cart -->
<!-- logo carousel -->
<div class="logo-carousel-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="logo-carousel-inner">
                    <div class="single-logo-item">
                        <img src="~/img/company-logos/1.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="~/img/company-logos/2.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="~/img/company-logos/3.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="~/img/company-logos/4.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="~/img/company-logos/5.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end logo carousel -->
