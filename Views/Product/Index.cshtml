@{
	ViewBag.Title = "Chi tiết sản phẩm";
}
<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Tươi và sạch</p>
					<h1>Chi tiết sản phẩm</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb section -->
<!-- single product -->
<div class="single-product mt-150 mb-150">
	<div class="container">
		<div class="row">
			<div class="col-md-5">
				<div class="single-product-img">
					<img src="~/img/products/@Model.Img" alt="" style="width: 80%; height: auto; max-height: 300px;">
				</div>
			</div>
			<div class="col-md-7">
				<div class="single-product-content">
					<h3>@Model.ProductName</h3>
					<p class="single-product-pricing"><span>1Kg</span> @Model.Price Đ</p>
					<p>@Model.Description</p>
					<div class="single-product-form">
						
						<a asp-action="add" asp-controller="cart" asp-route-Id="@Model.Id" class="cart-btn"><i class="fas fa-shopping-cart"></i> Thêm vào giỏ hàng</a>
					</div>
					
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end single product -->
<!-- more products -->
<div class="product-section mt-150 mb-150">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="section-title">
					<h3><span class="orange-text">Một số</span> Loại trái cây</h3>
					<p>Đa dạng trái cây tươi sạch, chỉ bán trong ngày.</p>
				</div>
			</div>
		</div>

		<div class="row">
			<vc:products></vc:products>
		</div>
	</div>
</div>
<!-- end more products -->
<!-- logo carousel -->
<div class="logo-carousel-section">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="logo-carousel-inner">
					<div class="single-logo-item">
						<img src="~/img/company-logos/1.png" alt="">
					</div>
					<div class="single-logo-item">
						<img src="~/img/company-logos/2.png" alt="">
					</div>
					<div class="single-logo-item">
						<img src="~/img/company-logos/3.png" alt="">
					</div>
					<div class="single-logo-item">
						<img src="~/img/company-logos/4.png" alt="">
					</div>
					<div class="single-logo-item">
						<img src="~/img/company-logos/5.png" alt="">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end logo carousel -->
